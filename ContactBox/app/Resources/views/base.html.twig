<body>

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="">ContactBox</a>
            </div>
            <ul class="nav navbar-nav">
                <li class="active"><a href="{{ path('show_all') }}">Wszystkie kontakty</a></li>
                <li><a href="{{ path('show_all_groups') }}">Grupy</a></li>
            </ul>
        </div>
    </nav>
<div class="container-fluid">
    <div class =" row">
        <div class="col-lg-2"></div>
        <div class="col-lg-10">
        {% block page_title %}{% endblock %}
    </div>
</div>

</div>
<hr/>
<div class="container-fluid">
    {% block body %}

    {% endblock %}
</div>


<!-- jQuery -->
<script src="{{ asset('sbadmin2/vendor/jquery/jquery.min.js') }}"></script>

