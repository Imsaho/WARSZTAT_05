{% extends "::base.html.twig" %}

{% block page_title %}
    <h1>ContactBox - wszystkie grupy</h1>
{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
            <div class="table-responsive">
                <table class="table">
                    <tr>
                        <th></th>
                        <th></th>
                        <th style="text-align: right">
                            <a data-toggle="modal" href="{{ path('add_group') }}" data-target="#newGroupModal">+ dodaj grupę</a>
                        </th>
                    </tr>
                    {% for group in groups %}
                        <tr>
                            <th>{{ group.groupName }}</th>
                            <td>
                                kontakty: {{ group.persons | length }}
                            </td>
                            <td style="text-align: right">
                                <a data-toggle="modal" href="{{ path('edit_group', {'id': group.id}) }}" data-target="#editGroupModal{{ group.id }}">edytuj</a> | 
                                <a href="{{ path('remove_group', {'id': group.id}) }}">usuń</a>

                                {#modal window - edit group #}
                                <div id="editGroupModal{{ group.id }}" class="modal fade" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                        </div>
                                    </div>
                                </div>

                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>

    {#modal window - add group #}
    <div id="newGroupModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>

{% endblock %}