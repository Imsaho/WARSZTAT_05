<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3 class="modal-title">dodaj adres e-mail</h3>
</div>
<div class="modal-body">

    {% block form_email %}
        <form action="" method="POST">

            {{ form_errors(email_form) }}

            {{ form_row(email_form.email) }}
            {{ form_row(email_form.email_type) }}

            {{ form_rest(email_form) }}

            <input type="submit" value="Dodaj adres" class="btn btn-outline btn-success btn-lg btn-block" />

        </form>

    {% endblock %}
</div>
<div class="modal-footer">
</div>