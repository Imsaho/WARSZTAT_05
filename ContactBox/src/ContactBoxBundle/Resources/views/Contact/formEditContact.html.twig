{% extends "::base.html.twig" %}

{% block title %}editContact{% endblock %}

{% block page_title %}
    <h1>Edytuj kontakt</h1>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-2">
        </div>

        <form action="{{ path('edit', {'id': id}) }}" method="POST">

            <div class="col-lg-3">
                <h2>Podstawowe dane</h2>
                {% block form_person %}

                    {{ form_errors(person_form) }}

                    {{ form_row(person_form.first_name) }}
                    {{ form_row(person_form.last_name) }}
                    {{ form_row(person_form.description) }}
                    {{ form_row(person_form.groups) }}

                    {{ form_rest(person_form) }}

                {% endblock %}
                <hr>
            </div>

            <div class="col-lg-1">
            </div>

            <div class="col-lg-3">
                <h2>Dane adresowe</h2>
                {% block form_address %}

                    {{ form_errors(address_form) }}

                    {{ form_row(address_form.city) }}
                    {{ form_row(address_form.street) }}
                    {{ form_row(address_form.house_number) }}
                    {{ form_row(address_form.apartment_number) }}
                    {{ form_row(address_form.address_type) }}

                    {{ form_rest(address_form) }}

                {% endblock %}
                <hr>
            </div>

            <div class="col-lg-2">
            </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
        </div>

        <div class="col-lg-3">
            <h2>Adres e-mail</h2>
            {% block form_email %}

                {{ form_errors(email_form) }}

                {{ form_row(email_form.email) }}
                {{ form_row(email_form.email_type) }}

                {{ form_rest(email_form) }}

            {% endblock %}
        </div>

        <div class="col-lg-1">
        </div>

        <div class="col-lg-3">
            <h2>Numer telefonu</h2>
            {% block form_phone %}

                {{ form_errors(phone_form) }}

                {{ form_row(phone_form.phone_number) }}
                {{ form_row(phone_form.phone_type) }}

                {{ form_rest(phone_form) }}

            {% endblock %}
        </div>

        <div class="col-lg-2">
        </div>
    </div>
        
    <input type="submit" value="ZatwierdÅº zmiany" class="btn btn-outline btn-success btn-lg btn-block" />

</form>
{% endblock %}














